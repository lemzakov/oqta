generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model AdminUser {
  id        String   @id @default(uuid())
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@map("admin_users")
}

model ChatHistory {
  id         String   @id @default(uuid())
  sessionId  String   @map("session_id")
  type       String
  content    String   @db.Text
  toolCalls  Json     @default("[]") @map("tool_calls")
  additionalKwargs Json @default("{}") @map("additional_kwargs")
  responseMetadata Json @default("{}") @map("response_metadata")
  invalidToolCalls Json @default("[]") @map("invalid_tool_calls")
  createdAt  DateTime @default(now()) @map("created_at")

  session    Session  @relation(fields: [sessionId], references: [id])

  @@index([sessionId])
  @@map("n8n_chat_histories")
}

model Session {
  id        String   @id @default(uuid())
  userId    String?  @map("user_id")
  userEmail String?  @map("user_email")
  userName  String?  @map("user_name")
  startedAt DateTime @default(now()) @map("started_at")
  lastMessageAt DateTime @default(now()) @map("last_message_at")

  messages  ChatHistory[]

  @@index([startedAt])
  @@map("sessions")
}

model Setting {
  id        String   @id @default(uuid())
  key       String   @unique
  value     String   @db.Text
  updatedAt DateTime @updatedAt @map("updated_at")

  @@map("settings")
}

model Invoice {
  id        String   @id @default(uuid())
  amount    Decimal  @db.Decimal(10, 2)
  status    String   // "pending", "paid", "in_progress"
  createdAt DateTime @default(now()) @map("created_at")
  paidAt    DateTime? @map("paid_at")

  @@index([status])
  @@map("invoices")
}
